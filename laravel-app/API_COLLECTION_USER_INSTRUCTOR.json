{
	"info": {
		"_postman_id": "rkkf-user-instructor-api",
		"name": "RKKF - User & Instructor API",
		"description": "Complete API collection for User and Instructor operations: Login, Update, Delete. Admin creates users/instructors.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Login (Unified - All Roles)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"user@example.com\",\n    \"password\": \"password123\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/login",
							"host": ["{{base_url}}"],
							"path": ["api", "login"]
						},
						"description": "Unified login endpoint for all roles (User, Instructor, Admin). Returns user data and authentication token. Response key changes based on role: 'user' for role 0, 'instructor' for role 2, 'admin' for role 1."
					},
					"response": []
				},
				{
					"name": "Get Current User",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"description": "Token from login response"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/me",
							"host": ["{{base_url}}"],
							"path": ["api", "me"]
						},
						"description": "Get authenticated user information"
					},
					"response": []
				},
				{
					"name": "Logout (Current Device)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"description": "Token from login response"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/logout",
							"host": ["{{base_url}}"],
							"path": ["api", "logout"]
						},
						"description": "Unified logout endpoint. Revokes current token by default. Works for all roles (User, Instructor, Admin)."
					},
					"response": []
				},
				{
					"name": "Logout (All Devices)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"description": "Token from login response"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"all_devices\": true\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/logout",
							"host": ["{{base_url}}"],
							"path": ["api", "logout"]
						},
						"description": "Unified logout endpoint with all_devices=true. Revokes all tokens for the user. Works for all roles."
					},
					"response": []
				}
			],
			"description": "Unified authentication endpoints for all roles"
		},
		{
			"name": "User APIs",
			"item": [
				{
					"name": "Update User",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"description": "Token from login response"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"firstname\": \"John Updated\",\n    \"lastname\": \"Doe Updated\",\n    \"mobile\": \"+9876543210\",\n    \"password\": \"newpassword123\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/frontend/user/:id",
							"host": ["{{base_url}}"],
							"path": ["api", "frontend", "user", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "1",
									"description": "User ID (must match authenticated user)"
								}
							]
						},
						"description": "Update user profile. User can only update their own profile."
					},
					"response": []
				},
				{
					"name": "Delete User",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"description": "Token from login response"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/frontend/user/:id",
							"host": ["{{base_url}}"],
							"path": ["api", "frontend", "user", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "1",
									"description": "User ID (must match authenticated user)"
								}
							]
						},
						"description": "Delete user account. User can only delete their own account. All tokens are revoked."
					},
					"response": []
				}
			],
			"description": "User management endpoints for regular users (role = 0). Note: Users are created by Admin."
		},
		{
			"name": "Instructor APIs",
			"item": [
				{
					"name": "Update Instructor",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"description": "Token from login response"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"firstname\": \"Jane Updated\",\n    \"lastname\": \"Smith Updated\",\n    \"mobile\": \"+9876543210\",\n    \"password\": \"newpassword123\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/frontend/instructor/:id",
							"host": ["{{base_url}}"],
							"path": ["api", "frontend", "instructor", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "2",
									"description": "Instructor ID (must match authenticated instructor)"
								}
							]
						},
						"description": "Update instructor profile. Instructor can only update their own profile."
					},
					"response": []
				},
				{
					"name": "Delete Instructor",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"description": "Token from login response"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/frontend/instructor/:id",
							"host": ["{{base_url}}"],
							"path": ["api", "frontend", "instructor", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "2",
									"description": "Instructor ID (must match authenticated instructor)"
								}
							]
						},
						"description": "Delete instructor account. Instructor can only delete their own account. All tokens are revoked."
					},
					"response": []
				}
			],
			"description": "Instructor management endpoints for instructors (role = 2). Note: Instructors are created by Admin."
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000",
			"type": "string"
		},
		{
			"key": "token",
			"value": "",
			"type": "string"
		}
	]
}

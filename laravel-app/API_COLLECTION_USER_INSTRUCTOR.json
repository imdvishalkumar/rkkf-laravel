				{
					"name": "Register User",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"firstname\": \"John\",\n    \"lastname\": \"Doe\",\n    \"email\": \"john.doe@example.com\",\n    \"password\": \"password123\",\n    \"mobile\": \"+1234567890\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/frontend/user/register",
							"host": ["{{base_url}}"],
							"path": ["api", "frontend", "user", "register"]
						},
						"description": "Register a new user (role = 0). Returns user data and authentication token."
					},
					"response": []
				},
				{
					"name": "Login User",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"john.doe@example.com\",\n    \"password\": \"password123\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/frontend/user/login",
							"host": ["{{base_url}}"],
							"path": ["api", "frontend", "user", "login"]
						},
						"description": "Login as a user. Returns user data and authentication token."
					},
					"response": []
				},
				{
					"name": "Update User",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{user_token}}",
								"description": "Token from login/register response"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"firstname\": \"John Updated\",\n    \"lastname\": \"Doe Updated\",\n    \"mobile\": \"+9876543210\",\n    \"password\": \"newpassword123\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/frontend/user/:id",
							"host": ["{{base_url}}"],
							"path": ["api", "frontend", "user", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "1",
									"description": "User ID (must match authenticated user)"
								}
							]
						},
						"description": "Update user profile. User can only update their own profile."
					},
					"response": []
				},
				{
					"name": "Delete User",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{user_token}}",
								"description": "Token from login/register response"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/frontend/user/:id",
							"host": ["{{base_url}}"],
							"path": ["api", "frontend", "user", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "1",
									"description": "User ID (must match authenticated user)"
								}
							]
						},
						"description": "Delete user account. User can only delete their own account. All tokens are revoked."
					},
					"response": []
				}
			],
			"description": "User management endpoints for regular users (role = 0)"
		},
